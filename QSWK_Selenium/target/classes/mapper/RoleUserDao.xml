<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.vico.dao.RoleUserDao">

    <resultMap type="com.vico.entity.RoleUser" id="RoleUserMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="username" column="username" jdbcType="VARCHAR"/>
        <result property="password" column="password" jdbcType="VARCHAR"/>
        <result property="isregister" column="isRegister" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="RoleUserMap">
        select
          id, username, password, isRegister
        from test.role_user
        where id = #{id}
    </select>
<!--  查询最后一条-->
    <select id="queryLastOne" resultMap="RoleUserMap">
        select
          id, username, password, isRegister
        from test.role_user
        order by id DESC limit 1;
    </select>
    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="RoleUserMap">
        select
          id, username, password, isRegister
        from test.role_user
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="RoleUserMap">
        select
        id, username, password, isRegister
        from test.role_user
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="username != null and username != ''">
                and username = #{username}
            </if>
            <if test="password != null and password != ''">
                and password = #{password}
            </if>
            <if test="isregister != null and isregister != ''">
                and isRegister = #{isregister}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into test.role_user(username, password, isRegister)
        values (#{username}, #{password}, #{isregister})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update test.role_user
        <set>
            <if test="username != null and username != ''">
                username = #{username},
            </if>
            <if test="password != null and password != ''">
                password = #{password},
            </if>
            <if test="isregister != null and isregister != ''">
                isRegister = #{isregister},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from test.role_user where id = #{id}
    </delete>

</mapper>