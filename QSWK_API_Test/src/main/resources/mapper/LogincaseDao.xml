<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.vico.dao.LogincaseDao">

    <resultMap type="com.vico.entity.Logincase" id="LogincaseMap">
        <result property="id" column="id" jdbcType="OTHER"/>
        <result property="username" column="userName" jdbcType="VARCHAR"/>
        <result property="password" column="passWord" jdbcType="VARCHAR"/>
        <result property="expected" column="expected" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById"  resultMap="LogincaseMap">
        select
          id, userName, passWord, expected
        from world.logincase
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="LogincaseMap">
        select
          id, userName, passWord, expected
        from world.logincase
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="LogincaseMap">
        select
        id, userName, passWord, expected
        from world.logincase
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="username != null and username != ''">
                and userName = #{username}
            </if>
            <if test="password != null and password != ''">
                and passWord = #{password}
            </if>
            <if test="expected != null and expected != ''">
                and expected = #{expected}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into world.logincase(userName, passWord, expected)
        values (#{username}, #{password}, #{expected})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update world.logincase
        <set>
            <if test="username != null and username != ''">
                userName = #{username},
            </if>
            <if test="password != null and password != ''">
                passWord = #{password},
            </if>
            <if test="expected != null and expected != ''">
                expected = #{expected},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from world.logincase where id = #{id}
    </delete>

</mapper>